@model UserLoginModel

@{
    ViewData["Title"] = "Авторизация";
}

<a asp-action="Register" asp-controller="Account">Регистрация</a>
<br /><br />

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label class="control-label" asp-for="Email">Введите Email</label>
            <input type="text" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Password">Введите пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-default" />
        </div>
    </div>
</form>