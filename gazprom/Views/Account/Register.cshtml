@model UserRegisterModel

@{
    ViewData["Title"] = "Регистрация";
}

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label class="control-label" asp-for="Email">Введите Email</label>
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Password">Введите пароль</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="ConfirmPassword">Повторите пароль</label>
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger" />
        </div>
        <div class="form-group">
            <input type="submit" value="Регистрация" class="btn btn-default" />
        </div>
    </div>
</form>